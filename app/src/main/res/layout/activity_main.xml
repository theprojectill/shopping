<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_puerta18">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/tviewUsuario"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tviewContraseña"
        android:text="Contraseña"
        android:textSize="25dp"
        android:layout_below="@+id/tviewUsuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tviewUsuario"
        android:layout_centerHorizontal="true"
        android:id="@+id/editUsusario"
        android:singleLine="true"
        android:gravity="center"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tviewContraseña"
        android:layout_centerHorizontal="true"
        android:id="@+id/editContraseña"
        android:maxLength="20"
        android:singleLine="true"
        android:inputType="textPassword"
        android:gravity="center"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/tinynote_ingresar"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_below="@+id/editContraseña"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_ingresar"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordar credenciales"
        android:id="@+id/recordame_ckBox"
        android:layout_below="@+id/button_ingresar"
        android:layout_centerHorizontal="true"
        android:checked="false" />

</RelativeLayout>
